# Environment Variables Template
# Copy this file to .env, .env.development, or .env.production and fill in your values

# =================================
# Supabase Configuration
# =================================
SUPABASE_URL=your_supabase_url_here
SUPABASE_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_KEY=your_supabase_service_key_here

# =================================
# Google Gemini AI Configuration
# =================================
GEMINI_API_KEY=your_gemini_api_key_here

# =================================
# GitHub API (for repository access)
# =================================
GH_API_KEY=your_github_token_here

# =================================
# AI Detection APIs (Optional)
# =================================
CODEQUIRY_API_KEY=your_codequiry_key_here
COPYLEAKS_KEY=your_copyleaks_key_here
HF_API_KEY=your_huggingface_key_here

# =================================
# Application Settings
# =================================
APP_ENV=development
ENVIRONMENT=development
LOG_LEVEL=info
DEBUG=false
REPORT_DIR=reports
PORT=8000

# =================================
# Embedding Configuration
# =================================
EMBEDDING_PROVIDER=sentence-transformers
EMBEDDING_MODEL=all-MiniLM-L6-v2
DISABLE_EXTERNAL_LLM=false
HTTP_TIMEOUT=30

# =================================
# CORS Settings
# =================================
# Development: http://localhost:8080,http://localhost:5173
# Production: https://yourfrontend.com,https://www.yourfrontend.com
CORS_ORIGINS=http://localhost:8080,http://localhost:5173
# =================================
# Redis Cache (Optional - improves performance)
# =================================
# Using Upstash Redis or any Redis instance
REDIS_URL=redis://default:your_password@your-redis-host:6379